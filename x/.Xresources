#define $FONT_SIZE 8

! Font rendering.
Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

! Cursor size.
Xcursor.size: 48

! XTerm settings.
xterm*locale: true
xterm*termName: xterm-256color
xterm*faceName: \
    Source Code Pro for Powerline:size=$FONT_SIZE:antialias=true, \
    Source Code Pro:size=$FONT_SIZE:antialias=true, \
    FontAwesome:size=$FONT_SIZE:antialias=true
xterm*allowBoldFonts: false
xterm*scaleHeight: 1.01
xterm*bellIsUrgent: true

! Copy/Paste in terminal emulator:
!   Ctrl+Shift+V : Paste from clipboard
!   Ctrl+Shift+C : Copy to clipboard
*VT100.Translations: #override \
    Shift Ctrl <Key>V:    insert-selection(CLIPBOARD) \n\
    Shift Ctrl <Key>C:    copy-selection(CLIPBOARD)

